<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="mb-6">
      <div class="flex items-center bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
        <svg class="w-5 h-5 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11V5a1 1 0 10-2 0v2a1 1 0 002 0zm0 4a1 1 0 10-2 0v4a1 1 0 102 0v-4z" clip-rule="evenodd"/>
        </svg>
        <p class="font-semibold">
          <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
        </p>
      </div>
      <ul class="mt-3 text-red-600 list-disc list-inside">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :content, rows: 5, class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Submit Button -->
  <div class="flex items-center justify-end">
    <% submit_label = post.persisted? ? "Update Post" : "Create Post" %>
    <%= form.submit submit_label, class: "inline-flex items-center px-6 py-3 bg-blue-600 border border-transparent rounded-md font-semibold text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
