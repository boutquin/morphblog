<div id="<%= dom_id post %>" class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden">
  <div class="bg-blue-600 p-6">
    <h2 class="text-2xl font-semibold text-white"><%= post.title %></h2>
  </div>
  <div class="p-6 flex-grow">
    <p class="text-gray-700 mb-4"><%= truncate(post.content, length: 100) %></p>
  </div>
  <div class="p-6 bg-gray-50 flex items-center justify-between">
    <div class="flex items-center text-sm text-gray-500">
      <svg class="w-5 h-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 10a4 4 0 100-8 4 4 0 000 8zM10 12c-2.757 0-10 1.343-10 4v2h20v-2c0-2.657-7.243-4-10-4z" />
      </svg>
      <span>
        Posted by <strong><%= post.user.name %></strong>
      </span>
    </div>
    <%= link_to "Read More", post, class: "inline-block px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700" %>
  </div>
</div>
