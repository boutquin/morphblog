<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Editing Post</h1>

  <div class="max-w-3xl mx-auto">
    <!-- Edit Post Form -->
    <div class="p-8 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold text-blue-600 mb-6">Update Your Post</h2>
      <%= render "form", post: @post %>
    </div>

    <!-- Action Links -->
    <div class="mt-8 flex flex-wrap items-center space-x-4">
      <%= link_to "Show this post", @post, class: "inline-flex items-center px-6 py-3 bg-green-600 text-white rounded-md font-semibold hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      <%= link_to "Back to posts", posts_path, class: "inline-flex items-center px-6 py-3 bg-gray-500 text-white rounded-md font-semibold hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
    </div>
  </div>
</div>
